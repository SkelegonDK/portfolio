---
// Component Imports
import MainHead from '../components/MainHead.astro';

import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';
// import PortfolioPreview from '../components/PortfolioPreview.astro';
import type { Project } from '../types';

// Image Imports
// import Hero from '../Images/bedroom.jpg';


// Data Fetching: List all Markdown posts in the repo.
const projects = await Astro.glob<Project>('./project/**/*.md');
const featuredProject = projects[1]!;

// Full Astro Component Syntax:
// https://docs.astro.build/core-concepts/astro-components/
---

<html lang="en">
	<head>
		<MainHead
			title="Manuel Thomsen: Creative Developer & Designer"
			description="Manuel Thomsen is a creative developer and designer based in Copenhagen, Denmark. He specializes in building websites and web apps with a focus on design and user experience."
		/>
		<style>
			.wrapper {
				margin-top: 2em;
				margin-bottom: 2em;
			}

			.hero {
				width: 100vw;
				position: relative;
				overflow: hidden;
				height: 100vh;
			}

			@media (min-width: 750px) {
				/* .hero {
					height: 80vh;
				} */
			}

			.img {
				display: block;
				width: 100%;
				height: auto;
			}

			
			.gradient2 {
				
				width: 100%;
				height: 100%;
				position: absolute;
				top: 0;
				left: 0;
				z-index: 2;
			}

			.video_container {
				width: 100%;
				
				z-index: 1;
				overflow: hidden;
			}
			.overlay {
				overflow: hidden;
				position: absolute;
				top: 0;
				left: 0;
				width: 100%;
				height: 100%;
				z-index: 10;
				display: flex;
				flex-direction: column;
				align-items: flex-start;
				justify-content: center;
				padding-left: 2rem;
			}

			@media (min-width: 750px) {
				.overlay {
					padding-left: 4rem;
				}
			}

			.title {
				font-weight: 900;
				font-size: var(--f-u6);
				margin-bottom: 0.5rem;
				margin-top: 0;
			}

			@media (min-width: 750px) {
				.title {
					font-size: var(--f-u12);
				}
			}

			.grid {
				display: grid;
				grid-gap: 2rem;
			}

			.video_bg {
				overflow: hidden;
				position: absolute;
				top: 0;
				left: 0;
				width: 1920px;
				height: auto;
				z-index: 1;
			}

			@media (min-width: 1200px) {
				.grid {
					grid-template-columns: 2fr 1fr;
				}
			}

			.sectionTitle {
				font-weight: 700;
				font-size: var(--f-u8);
				margin-top: 4rem;
				margin-bottom: 2rem;
			}

			.roles {
				display: flex;
				flex-wrap: wrap;
				gap: 0.5em;
				font-size: var(--f-d1);
			}

			.role {
				position: relative;
				display: inline-block;
				white-space: nowrap;
				font-weight: 900;
				color: var(--hidden-night);
				background-color: var(--hidden-blue);
				padding: 0.35em 0.5em;
				z-index: 2;
				
			}
			.role:hover{
				cursor: pointer;
			}

			@media (min-width: 750px) {
				.role {
					font-size: var(--f-u3);
				}
			}

			.role:nth-of-type(1) .invert {
				background-color: var(--hidden-love);
				color: var(--hidden-blue);
			}

			.role:nth-of-type(2) .invert {
				background-color: var(--hidden-love);
				color: var(--hidden-blue);
			}

			.role:nth-of-type(3) .invert {
				background-color: var(--hidden-love);
				color: var(--hidden-blue);
			}

			.role:hover .invert {
				clip-path: polygon(0% 0%, 100% 0%, 100% 100%, 0% 100%);
			}

			.invert {
				position: absolute;
				color: var(--t-fg);
				display: flex;
				align-items: center;
				justify-content: center;
				width: 100%;
				height: 100%;
				top: 0;
				left: 0;
				pointer-events: none;
				clip-path: polygon(0% 100%, 100% 100%, 100% 200%, 0% 200%);
				transition: clip-path cubic-bezier(0.4, 0, 0.5, 1) 150ms;
			}

			.desc {
				font-size: var(--f-u1);
				margin-top: 1.5rem;
				margin-bottom: 0;
			}

			.subtitle {
				display: block;
				font-weight: 400;
				font-size: var(--f-d6);
				letter-spacing: -0.0625em;
			}

			.bio {
				line-height: 2;
				margin-bottom: 2rem;
			}

			.bio > span:first-of-type {
				line-height: 1;
				margin-bottom: 0.5em;
				display: block;
				font-weight: 700;
				font-size: var(--f-u4);
			}

			.buttonContainer {
				text-align: center;
				margin-top: 2em;
			}
		</style>
	</head>
	<body>
		<Nav />
		
		<header class="hero">
			<div class="video_container">
				<video class="video_bg" preload="auto" muted autoplay class="gradient" loop>
					<source src="/portfolio/assets/bedroom_1.mp4" type="video/mp4" />
				</video>
			</div>
			
			<!-- <div class="gradient2"></div> -->
			<div class="overlay">
				<h1 class="title">
					<small class="subtitle">Creative Developer & Designer</small>Manuel Thomsen
				</h1>
				<div class="roles">
					<span class="role">Software Developer<span class="invert">Python & JS</span></span>
					<span class="role">Digital Product Designer<span class="invert">Figma & Blender</span></span>
					<span class="role">Massive Tech Enthusiast<span class="invert">AI & Creative Production</span></span>
				</div>
				<!-- <p class="desc">Lover of dogs, roadtrips, and poetry.</p> -->
			</div>
		</header>
		
		
		<Footer />
	</body>
</html>
